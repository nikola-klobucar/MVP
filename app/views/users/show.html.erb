<h1>Hello <%= current_user.email %></h1>


<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Product Code</th>
            <th>Description</th>
            <th>Specification</th>
            <th>Options</th>
        </tr>
    </thead>

    <tbody>  
        <% current_user.products.each do |p|%>
            <tr>
                <td><%=  p.name %></td>
                <td><%=  p.description %></td>
                <td><%=  p.specs %></td>
                <td><%=  p.product_code %></td>
                <% if user_signed_in? %>
                    <td>
                        <%=  link_to 'Edit', edit_product_path(p) %>
                        <%= link_to 'Destroy', product_path, method: :delete, data: {confirm: "Are you sure?"} %>
                    </td>
                <% end %>

            </tr>
        <% end %>
    </tbody>
</table>

<br>