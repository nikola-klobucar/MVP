<h1>All Products</h1>


<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Product Code</th>
            <th>Description</th>
            <th>Specification</th>
        </tr>
    </thead>

    <tbody>
        <% @products.each do |product| %>
            <tr>
                <td><%=  product.name %></td>
                <td><%=  product.product_code %></td>
                <td><%=  product.description %></td>
                <td><%=  product.specs %></td>
                <td><%= link_to 'Show', product %></td>
            </tr>
        <%end%>
    </tbody>
</table>

<br>